git clone https://github.com/ipython-contrib/jupyter_contrib_nbextensions.git $(jupyter --data-dir)/jupyter_contrib_nbextensions
pip install -e --index-url $(jupyter --data-dir)/ jupyter_contrib_nbextensions
jupyter contrib nbextension install --user

pip install jupyter_nbextensions_configurator
jupyter nbextensions_configurator enable --user


git clone https://github.com/gesiscss/widd $(jupyter --data-dir)/nbextensions/widd
jupyter nbextension install $(jupyter --data-dir)/nbextensions/widd --user


jupyter nbextension enable snippets_menu/main
jupyter nbextension enable widd/main